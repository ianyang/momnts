<header>
  <div class="current-page">
    <h3>Create Event</h3>
  </div>
  <div class="open-popout">
    <span class="entypo-menu"></span>
  </div>
</header>

<%= render :partial => 'partials/topper' %>

<div class="container">

  <div class="venue">
    <button class="search-icon"><span class="entypo-search"></span></button>
    <span>
      <%= form_tag(controller: 'events', action: 'search', method: "") do %>
        <%= text_field_tag(:find , nil, placeholder: 'something near you e.g. coffee') %>
        <%= hidden_field_tag 'place', 'San Francisco' %>
        <div class='hidden'><%= submit_tag 'Find' %></div>
      <% end %>
    </span>
  </div>

  <div class="loading">
    <%= image_tag("loading.gif") %>
  </div>

  <div class="results">
  </div>

  <div class="form">
    <%= form_for @event do |f| %>

      <div><h4>Date</h4>
      <%= f.date_select :date, :start_year => Date.current.year, :end_year => 2014, :order => [:month, :day, :year] %></div>
      <div><h4>Time</h4>
      <%= f.time_select :time, {minute_step: 15, ampm: true} %></div>
      <div><h4>Duration</h4>
      <%= f.select :duration, [15,30,45,60,75,90,"Get a life!"] %>mins</div>
      <div><h4>Topic</h4>
      <%= f.text_field :topic %></div>
      <div><h4>Short Bio</h4>
      <%= f.text_field :creator_identifier %></div>

      <div class="hidden">
        <%= f.text_field :location, :readonly => true %>
        <%= f.text_field :address, :readonly => true %>
        <%= f.text_field :image, :readonly => true %>
      </div>

      <%= f.submit %>
    <% end %>
  </div>

</div>

</div>
<%= render :partial => 'partials/footer' %>

<%= javascript_include_tag 'venue.js' %>
<div class="signin container">

  <div class="header">
    <div class="logo-container">
      <div class="logo">
        <%= image_tag 'logo.png' %>
      </div>
    </div>
    <div class="text">
      <h1>momnts</h1><h1>.us</h1>
    </div>
  </div>

  <div class="form">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="input">
      <%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %>
    </div>
    <div class="input">
    <%= f.password_field :password, :placeholder => 'Password' %>
    </div>
  </div>

  <%= f.submit "Sign in", class:'btn btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>

  <div class="bottom"></div>

</div>

<div class="nav signin">
  <div><a href="/events"><span class="entypo-search"></span></a></div>
  <div><a href="/events/new"><span class="entypo-plus"></span></a></div>
  <div><a href="/users/edit" class="current"><span class="entypo-user"></span></a></div>
  <div><a href="http://www.ianyang.co"><span class="entypo-info"></a></div>
</div>
